@model IEnumerable<FinalProtingII.Models.Jobdesk>
@{
    ViewBag.Title = "Data Jobdesk";
    ViewBag.ActiveMenu = "Jobdesk";
}

<h3>Data Jobdesk</h3>

<a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Tambah Jobdesk</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama Karyawan</th>
            <th>Deskripsi Pekerjaan</th>
            <th>Tanggal</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var j in Model)
        {
            <tr>
                <td>@j.Id</td>
                <td>@j.Karyawan?.Nama</td>
                <td>@j.Deskripsi</td>
                <td>@j.TanggalPekerjaan.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@j.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                    <a asp-action="Delete" asp-route-id="@j.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
