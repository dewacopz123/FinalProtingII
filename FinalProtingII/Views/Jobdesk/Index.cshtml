@model IEnumerable<FinalProtingII.Models.Jobdesk>
@{
    ViewBag.Title = "Data Jobdesk";
    ViewBag.ActiveMenu = "Jobdesk";
}

<div class="container-fluid">
    <div class="card card-primary card-outline">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">Search Jobdesk</h4>
        </div>
        <div class="card-body" style="padding: 25px 25px 10px 25px">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Nama Karyawan</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="searchKaryawanName"></select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Deskripsi Pekerjaan</label>
                        <div class="col-sm-8">
                            <select class="form-control" id="searchJobdesk"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <a asp-action="Create" class="btn btn-success mb-3"><i class="fas fa-plus"></i> Tambah Jobdesk</a>
            </div>
        </div>
    </div>

    <h3>Data Jobdesk</h3>
    
    <div class="card">
        <div class="card-body">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nama Karyawan</th>
                        <th>Deskripsi Pekerjaan</th>
                        <th>Tanggal</th>
                        <th>Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var j in Model)
                    {
                        <tr>
                            <td>@j.Id</td>
                            <td>@j.Karyawan?.Nama</td>
                            <td>@j.Deskripsi</td>
                            <td>@j.TanggalPekerjaan.ToShortDateString()</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@j.Id" class="btn btn-primary btn-sm"><i class="fas fa-edit"></i></a>
                                <a asp-action="Delete" asp-route-id="@j.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


