@model FinalProtingII.Models.Penggajian

<div class="modal fade" id="createModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Tambah Penggajian</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Nama Karyawan</label>
                        <input asp-for="NamaKaryawan" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Tanggal</label>
                        <input type="date" name="Tanggal" class="form-control"
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label>Gaji Pokok</label>
                        <input asp-for="GajiPokok" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-success" data-dismiss="modal">Batal</button>
                    <button type="submit" class="btn btn-success">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    $('#createModal').modal('show');
</script>
