@model FinalProtingII.Models.Penggajian

<div class="modal-dialog">
    <div class="modal-content">
        <form asp-action="Edit" method="post">
            <div class="modal-header">
                <h5 class="modal-title">Edit Penggajian</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Nama Karyawan</label>
                    <input asp-for="NamaKaryawan" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tanggal</label>
                    <input asp-for="Tanggal" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Gaji Pokok</label>
                    <input asp-for="GajiPokok" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Batal</button>
            </div>
        </form>
    </div>
</div>
