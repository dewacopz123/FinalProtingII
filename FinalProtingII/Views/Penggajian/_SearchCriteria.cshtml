@{
    var karyawanList = ViewBag.KaryawanList as List<string> ?? new List<string>();
}

<form method="get" asp-action="Index" asp-controller="Penggajian">
    <div class="box-header">
        <div class="row">
            <div class="col-lg-12 form-horizontal">
                <div class="box box-default box-solid">
                    <div class="container-fluid">
                        <div class="card card-primary card-outline">
                            <div class="card-header bg-primary text-white">
                                <h4 class="card-title mb-0">Search Penggajian</h4>
                            </div>
                            <div class="card-body" style="padding: 25px">
                                <div class="row justify-content-center mb-3">
                                    <div class="d-flex align-items-center" style="gap: 40px; flex-wrap: wrap;">
                                        <!-- Nama Karyawan -->
                                        <div class="form-group d-flex align-items-center mb-0">
                                            <label for="karyawanName" class="mb-0 font-weight-bold col-5">Nama Karyawan</label>
                                            <select class="form-control" id="searchKaryawanName" name="karyawanName" style="min-width: 200px;">
                                                <option value="">-- Choose --</option>
                                                @foreach (var name in (ViewBag.KaryawanNames as List<string>) ?? new List<string>())
                                                {
                                                    <option value="@name">@name</option>
                                                }
                                            </select>
                                        </div>

                                        <!-- Tanggal -->
                                        <div class="form-group d-flex align-items-center mb-0">
                                            <label for="searchDate" class="mr-2 mb-0 font-weight-bold">Waktu</label>
                                            <select class="form-control" id="searchDate" style="min-width: 200px;">
                                                <option value="">-- Choose --</option>
                                                <!-- Tambahkan opsi dari backend -->
                                            </select>
                                        </div>
                                        <!-- Tombol Search -->
                                        <div>
                                            <button type="submit" class="btn btn-info">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tombol Tambah Penggajian -->
                        <div class="row">
                            <div class="col-md-12 text-left mb-2">
                                <button class="btn btn-success open-modal" data-url="@Url.Action("Create")" type="button">
                                    + Tambah Penggajian
                                </button>
                            </div>
                        </div>
                    </div> <!-- /.container-fluid -->
                </div> <!-- /.box -->
            </div> <!-- /.col -->
        </div> <!-- /.row -->
    </div> <!-- /.box-header -->
</form>
