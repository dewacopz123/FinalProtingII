@model FinalProtingII.Models.Penggajian

<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form asp-action="Create" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Tambah Penggajian</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Nama Karyawan</label>
                        <input asp-for="NamaKaryawan" class="form-control" />
                        <span asp-validation-for="NamaKaryawan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Tanggal</label>
                        <input asp-for="Tanggal" type="date" class="form-control" />
                        <span asp-validation-for="Tanggal" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Gaji Pokok</label>
                        <input asp-for="GajiPokok" class="form-control" />
                        <span asp-validation-for="GajiPokok" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                    <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
            </form>
        </div>
    </div>
</div>
