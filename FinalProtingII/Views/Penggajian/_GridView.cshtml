@model IEnumerable<FinalProtingII.Models.Penggajian>
@{
    var karyawanDict = (Dictionary<int, string>)ViewBag.KaryawanDict;
}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nama Karyawan</th>
            <th>Tanggal</th>
            <th>Gaji Pokok</th>
            <th>Aksi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@karyawanDict.GetValueOrDefault(item.IdKaryawan)</td>
                <td>@item.Tanggal.ToString("yyyy-MM-dd")</td>
                <td>@item.GajiPokok.ToString("C")</td>
                <td>
                    <a href="#" class="btn btn-warning btn-sm open-modal" data-url="@Url.Action("Edit", "Penggajian", new { id = item.Id })">Edit</a>
                    <a href="#" class="btn btn-danger btn-sm open-modal" data-url="@Url.Action("Delete", "Penggajian", new { id = item.Id })">Hapus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
