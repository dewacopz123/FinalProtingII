@model List<FinalProtingII.Models.Penggajian>
@using FinalProtingII.Models
@{
    var karyawanDict = ViewBag.KaryawanDict as Dictionary<int, string>;
}

<div class="container-fluid">
    <div class="card mt-3">
        <div class="card-body">
            <h4>Data Penggajian</h4>

            @if (Model == null || !Model.Any())
            {
                <div class="text-center">
                    Data tidak ditemukan.
                </div>
            }
            else
            {
                <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
                    <table class="table table-bordered table-striped">
                        <thead class="bg-info text-white">
                            <tr>
                                <th>Nama Karyawan</th>
                                <th>Tanggal</th>
                                <th>Gaji Pokok</th>
                                <th>Status</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(karyawanDict != null && karyawanDict.ContainsKey(item.IdKaryawan) ? karyawanDict[item.IdKaryawan] : "-")</td>
                                    <td>@item.Tanggal.ToString("yyyy-MM-dd")</td>
                                    <td>@item.GajiPokok.ToString("C")</td>
                                    <td>@item.Status</td>
                                    <td>
                                        <form asp-action="AdvanceStatus" method="post" style="display:inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning"
                                            @(item.Status == PenggajianStatus.Paid ? "disabled" : "")>
                                                Next Status
                                            </button>
                                        </form>
                                        <button class="btn btn-primary btn-sm open-modal" data-url="@Url.Action("Edit", "Penggajian", new { id = item.Id })">Edit</button>
                                        <button class="btn btn-danger btn-sm open-modal" data-url="@Url.Action("Delete", "Penggajian", new { id = item.Id })">Hapus</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
